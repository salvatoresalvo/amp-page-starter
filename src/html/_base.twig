            "datePublished": "2015-10-07T12:02:41Z",
            "image": [
                "logo.jpg"
            ]
        }
    </script> #}
{% endblock %}

{% block head_script %}
    {{ parent() }}
    {% if ampEnabled %}
        {% set amp_version = '0.1' %}
        <script custom-element="amp-image-lightbox" src="https://cdn.ampproject.org/v0/amp-image-lightbox-{{ amp_version }}.js" async=""></script>
    {% endif %}
{% endblock %}

